<%= form_with(model: space_view, local: true) do |form| %>
  <% if space_view.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(space_view.errors.count, "error") %>
        prohibited this space from being saved:
      </h2>

      <ul>
        <% space_view.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
